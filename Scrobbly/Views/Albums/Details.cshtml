@model Scrobbly.Models.Album

@{
    ViewData["Title"] = "Album Details";
    string allArtists = "";
    foreach (var albumToArist in Model.AlbumArtists)
    {
        allArtists += albumToArist.Artist.Name + ", ";
    }
    if (allArtists.Contains(","))
    {
        allArtists = allArtists.Remove(allArtists.LastIndexOf(","));
    }
}

<h2>Album Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SpotifyId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SpotifyId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AlbumArtists)
        </dt>
        <dd>
            @allArtists
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
